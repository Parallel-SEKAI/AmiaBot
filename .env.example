# Bot Configuration
# Command prefixes that the bot will respond to
PREFIXES=["/", ".", "!"]
# Text content for the help command
HELP_TEXT=欢迎使用AmiaBot\nBot使用方法\nhttps://amiabot.parallel-sekai.org/
# Whether to enable all features by default
FEATURES_DEFAULT_ENABLED=true
# TODO: add commit
MESSAGE_MATCH_LIKE_FACE_ID=0

# Whether the bot should exit on encountering an error
EXIT_WHEN_ERROR=true

# OneBot Configuration (NapCat)
# The HTTP API endpoint for sending messages
ONEBOT_HTTP_URL=http://127.0.0.1:3000
# The WebSocket endpoint for receiving events
ONEBOT_WS_URL=ws://127.0.0.1:3001
# Access token for OneBot authentication (if configured)
ONEBOT_TOKEN=

# Database Configuration (PostgreSQL)
APP_DB_HOST=127.0.0.1
APP_DB_PORT=5432
APP_DB_NAME=
APP_DB_USER=
APP_DB_PASSWORD=

# AI Service Configuration (OpenAI Compatible)
# Your API key for the AI service
OPENAI_API_KEY=
# The base URL for the API (e.g., https://api.openai.com/v1)
OPENAI_BASEURL=https://api.openai.com/v1
# The model name to use (e.g., gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini
# Maximum tokens for the response
OPENAI_MAX_TOKEN=8192

# Playwright Configuration (Rendering Engine)
# Leave PLAYWRIGHT_WS_ENDPOINT empty to use local browser instance
PLAYWRIGHT_WS_ENDPOINT=
# Maximum number of concurrent browser instances/pages
PLAYWRIGHT_CONCURRENCY=5

# GitHub Integration
# Personal Access Token for GitHub API
GITHUB_TOKEN=

# Netease Cloud Music Integration
# Cookies for accessing Netease Cloud Music features
NETEASE_COOKIES=

# Bilibili Integration
# Cookies for accessing Bilibili API
BILIBILI_COOKIES=

# Message Statistics Configuration
# Cooldown time for the command in milliseconds (default: 60000)
MESSAGE_STATISTICS_COOLDOWN_TIME=60000
# Maximum number of messages to analyze (default: 1000)
MESSAGE_STATISTICS_MAX_MESSAGE_COUNT=1000
# Number of recent days to analyze (default: 3)
MESSAGE_STATISTICS_RECENT_DAYS=3
# Maximum length of combined message text for AI analysis (default: 9000)
MESSAGE_STATISTICS_MAX_MESSAGE_TEXT_LENGTH=9000
