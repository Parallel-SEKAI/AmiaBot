<html lang='zh-CN'>
  <head>
    <meta charset='UTF-8' />
    <style>
      :root {
        --primary: #24292f;
        --on-primary: #ffffff;
        --surface: #ffffff;
        --on-surface: #24292f;
        --outline: #d0d7de;
        --divider: #d8dee4;
        --text-secondary: #57606a;
        --bg: #f6f8fa;
      }

      body {
        margin: 0;
        padding: 20px;
        font-family:
          -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial,
          sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji';
        background-color: var(--bg);
        display: flex;
        justify-content: center;
      }

      #render-target {
        background-color: var(--surface);
        color: var(--on-surface);
        border-radius: 12px;
        padding: 32px;
        width: 450px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--outline);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        margin-bottom: 16px;
        border: 2px solid var(--divider);
      }

      .user-name {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 4px;
      }

      .user-login {
        font-size: 18px;
        color: var(--text-secondary);
        margin-bottom: 12px;
      }

      .user-bio {
        font-size: 14px;
        line-height: 1.5;
        margin-bottom: 24px;
        color: var(--on-surface);
      }

      .stats-row {
        display: flex;
        justify-content: space-around;
        width: 100%;
        margin-bottom: 24px;
      }

      .stat-item {
        display: flex;
        flex-direction: column;
      }

      .stat-label {
        font-size: 12px;
        color: var(--text-secondary);
      }

      .stat-value {
        font-size: 20px;
        font-weight: 600;
      }

      .divider {
        width: 100%;
        height: 1px;
        background-color: var(--divider);
        margin-bottom: 24px;
      }

      .info-grid {
        width: 100%;
        display: grid;
        grid-template-columns: 80px 1fr;
        gap: 12px;
        font-size: 14px;
        text-align: left;
      }

      .info-label {
        color: var(--text-secondary);
      }

      .info-value {
        color: var(--on-surface);
      }

      .time-info {
        width: 100%;
        margin-top: 24px;
        font-size: 12px;
        color: var(--text-secondary);
        text-align: left;
      }

      .footer {
        width: 100%;
        margin-top: 24px;
        padding-top: 12px;
        border-top: 1px solid var(--divider);
        font-size: 12px;
        color: var(--text-secondary);
        text-align: right;
      }
    </style>
  </head>
  <body>
    <div id='render-target'>
      <img src='{{avatarUrl}}' class='avatar' alt='Avatar' />
      <div class='user-name'>{{name}}</div>
      <div class='user-login'>@{{login}}</div>

      {{#if bio}}
        <div class='user-bio'>{{bio}}</div>
      {{/if}}

      <div class='divider'></div>

      <div class='stats-row'>
        <div class='stat-item'>
          <div class='stat-label'>仓库</div>
          <div class='stat-value'>{{publicRepos}}</div>
        </div>
        <div class='stat-item'>
          <div class='stat-label'>关注</div>
          <div class='stat-value'>{{following}}</div>
        </div>
        <div class='stat-item'>
          <div class='stat-label'>粉丝</div>
          <div class='stat-value'>{{followers}}</div>
        </div>
      </div>

      <div class='divider'></div>

      <div class='info-grid'>
        {{#if location}}
          <div class='info-label'>位置:</div>
          <div class='info-value'>{{location}}</div>
        {{/if}}

        {{#if blog}}
          <div class='info-label'>网站:</div>
          <div class='info-value'>{{blog}}</div>
        {{/if}}

        {{#if company}}
          <div class='info-label'>公司:</div>
          <div class='info-value'>{{company}}</div>
        {{/if}}
      </div>

      <div class='time-info'>
        <div>创建时间: {{createdAt}}</div>
        <div>最后更新: {{updatedAt}}</div>
      </div>

      <div class='footer'>
        Generated by AmiaBot<br />
        Designed by Parallel SEKAI
      </div>
    </div>
  </body>
</html>
