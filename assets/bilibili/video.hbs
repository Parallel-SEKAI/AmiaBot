<html lang='zh-CN'>
  <head>
    <meta charset='UTF-8' />
    <style>
      :root {
        --primary: #fb7299;
        --on-primary: #ffffff;
        --surface: #ffffff;
        --on-surface: #18191c;
        --outline: #e3e5e7;
        --divider: #e3e5e7;
        --text-secondary: #9499a0;
        --bg: #f1f2f3;
      }

      body {
        margin: 0;
        padding: 20px;
        font-family:
          -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
          'Helvetica Neue', Arial, 'Noto Sans', sans-serif;
        background-color: var(--bg);
        display: flex;
        justify-content: center;
      }

      #render-target {
        background-color: var(--surface);
        color: var(--on-surface);
        border-radius: 12px;
        padding: 24px;
        width: 500px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--outline);
      }

      .video-header {
        display: flex;
        gap: 16px;
        margin-bottom: 20px;
      }

      .video-cover {
        width: 160px;
        height: 100px;
        border-radius: 6px;
        object-fit: cover;
        flex-shrink: 0;
      }

      .video-title-col {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      .video-title {
        font-size: 16px;
        font-weight: 600;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .video-ids {
        font-size: 12px;
        color: var(--text-secondary);
        margin-top: 4px;
      }

      .divider {
        height: 1px;
        background-color: var(--divider);
        margin: 16px 0;
      }

      .up-section {
        display: flex;
        align-items: center;
        margin-bottom: 16px;
      }

      .up-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        margin-right: 12px;
        border: 1px solid var(--outline);
      }

      .up-name {
        font-size: 14px;
        font-weight: 500;
      }

      .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 16px;
        margin-bottom: 20px;
      }

      .stat-item {
        display: flex;
        flex-direction: column;
      }

      .stat-label {
        font-size: 12px;
        color: var(--text-secondary);
        margin-bottom: 4px;
      }

      .stat-value {
        font-size: 14px;
        font-weight: 600;
      }

      .section-title {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 8px;
        color: var(--text-secondary);
      }

      .intro {
        font-size: 13px;
        line-height: 1.5;
        color: var(--on-surface);
        white-space: pre-wrap;
        max-height: 150px;
        overflow: hidden;
        margin-bottom: 16px;
      }

      .episodes-list {
        background-color: var(--bg);
        border-radius: 6px;
        padding: 12px;
        font-size: 13px;
      }

      .episode-item {
        margin-bottom: 6px;
        color: var(--on-surface);
      }

      .episode-duration {
        color: var(--text-secondary);
        font-size: 11px;
        margin-left: 4px;
      }

      .footer {
        margin-top: 24px;
        padding-top: 12px;
        border-top: 1px solid var(--divider);
        font-size: 11px;
        color: var(--text-secondary);
        text-align: right;
      }
    </style>
  </head>
  <body>
    <div id='render-target'>
      <div class='video-header'>
        <img src='{{coverUrl}}' class='video-cover' alt='Cover' />
        <div class='video-title-col'>
          <div class='video-title'>{{title}}</div>
          <div class='video-ids'>AV{{av}} / {{bv}}</div>
        </div>
      </div>

      <div class='divider'></div>

      <div class='up-section'>
        <img src='{{upperFaceUrl}}' class='up-avatar' alt='Avatar' />
        <div class='up-name'>{{upperName}}</div>
      </div>

      <div class='stats-grid'>
        <div class='stat-item'>
          <div class='stat-label'>播放</div>
          <div class='stat-value'>{{play}}</div>
        </div>
        <div class='stat-item'>
          <div class='stat-label'>点赞</div>
          <div class='stat-value'>{{thumbUp}}</div>
        </div>
        <div class='stat-item'>
          <div class='stat-label'>硬币</div>
          <div class='stat-value'>{{coin}}</div>
        </div>
        <div class='stat-item'>
          <div class='stat-label'>收藏</div>
          <div class='stat-value'>{{collect}}</div>
        </div>
        <div class='stat-item'>
          <div class='stat-label'>弹幕</div>
          <div class='stat-value'>{{danmaku}}</div>
        </div>
        <div class='stat-item'>
          <div class='stat-label'>评论</div>
          <div class='stat-value'>{{reply}}</div>
        </div>
        <div class='stat-item'>
          <div class='stat-label'>分享</div>
          <div class='stat-value'>{{share}}</div>
        </div>
      </div>

      {{#if intro}}
        <div class='section-title'>视频简介</div>
        <div class='intro'>{{intro}}</div>
      {{/if}}

      {{#if pages}}
        <div class='section-title'>分P信息 (共{{totalPages}}P)</div>
        <div class='episodes-list'>
          {{#each pages}}
            <div class='episode-item'>
              P{{page}}
              {{title}}
              <span class='episode-duration'>({{durationStr}})</span>
            </div>
          {{/each}}
          {{#if hasMorePages}}
            <div class='episode-item' style='color: var(--text-secondary)'>...
              还有
              {{remainingPages}}
              个分P</div>
          {{/if}}
        </div>
      {{/if}}

      {{#if seasons}}
        <div class='divider'></div>
        <div class='section-title'>合集信息 (共{{totalEpisodes}}集)</div>
        <div class='episodes-list'>
          {{#each seasons}}
            <div
              class='episode-item'
              style='font-weight: 600; margin-top: 8px;'
            >{{title}}</div>
            {{#each episodes}}
              <div class='episode-item' style='margin-left: 12px;'>
                >
                {{title}}
                <span class='episode-duration'>({{durationStr}})</span>
              </div>
            {{/each}}
            {{#if hasMoreEpisodes}}
              <div
                class='episode-item'
                style='margin-left: 12px; color: var(--text-secondary)'
              >> 还有 {{remainingEpisodes}} 集...</div>
            {{/if}}
          {{/each}}
          {{#if hasMoreSeasons}}
            <div
              class='episode-item'
              style='color: var(--text-secondary); margin-top: 8px;'
            >... 还有 {{remainingSeasons}} 个章节</div>
          {{/if}}
        </div>
      {{/if}}

      <div class='footer'>
        Generated by AmiaBot<br />
        Designed by Parallel SEKAI
      </div>
    </div>
  </body>
</html>